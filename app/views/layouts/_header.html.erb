<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Association forum", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Adverts", adverts_path %></li>
					<li><%= link_to "Associations",  associations_path %></li>
					<% if signed_in? %>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<%= @current_user  %> <b class="caret"></b>
						</a>
						<ul class = "dropdown-menu">
							<% (User.find_by_liuid(@current_user)).associations.each do |association| %>
							<li>
								<%= link_to association.name, association %>
							</li>
							<% end%>
							<li class = "divider"></li>
							<li>
								<%= link_to 'Sign out', logout_path %>
							</li>
						</ul>		
					</li>	
					<% else %>	
					<li><%= link_to "Sign in", signin_path %></li>
					<% end %>	
				</ul>
			</nav>
		</div>
	</div>
</header>