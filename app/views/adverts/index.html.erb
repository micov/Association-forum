<%= provide(:title, 'All adverts') %>
<h1>All adverts</h1>
<%= will_paginate %>
<ul class="adverts">
  <% @adverts.each do |advert| %>
    <li>
      <%= link_to advert.heading, advert %>
      <p> Advert posted by: <%= Association.find(advert[:association_id]).name%></p>

    </li>
  <% end %>
</ul>

<%= will_paginate %>