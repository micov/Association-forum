  <div class="span6 offset3">
    <%= simple_form_for @advert, :validate => true do |f| %>
    <%= render 'shared/error_messages_advert' %>
     <%= f.input :heading %>
     <%= f.input :description %>
     <%= f.input :profile %>
     <%= f.input :location %>
     <%= f.input :comprehensiveness %>
	 <%= f.input :start %>
	 <%= f.input :end %>
	 <%= f.input :contact %>
	 <%= f.input :applicationLink %>
	 <%= f.label :applicationDeadline %>
	 <%= f.text_field :applicationDeadline %>
     <% if can? :manage, :all %>
       <% assos = Association.all %>
     <% else %>
       <% assos = (User.find_by_liuid(current_user)).associations %>
     <% end %>
     <%= f.association :association, :collection => assos, :include_blank => false  %>
	 <%= f.button :submit, class: "btn btn-large btn-primary"  %>
    <% end %>
  </div>
