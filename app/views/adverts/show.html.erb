
<% provide(:title, @advert.heading) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @advert.heading %>
			</h1>
			<p class="italics" >This advert was posted by: <%= link_to @association.name, @association %>
			</p>
			<% if !@advert.description.empty? %>
			<h2>Description</h2>
			<p><%=@advert.description%></p>
			<% end%>      

			<% if !@advert.profile.blank? %>
			<h2>Your profile</h2>
			<p><%= @advert.profile%></p>
			<% end%>      
			<h2>Details</h2>
			<% if !@advert.location.blank? %>
			<p class="bold">Location: <%= @advert.location%></p>
			<% end%>      
			<% if !@advert.comprehensiveness.blank? %>
			<p class="bold">Comprehensiveness: <%= @advert.comprehensiveness%></p>
			<% end%>      
			<% if !@advert.start.blank? %>
			<p class="bold">Start: <%= @advert.start%></p>
			<% end%>      
			<% if !@advert.end.blank? %>
			<p class="bold">End: <%= @advert.end%></p>
			<% end%>      
			<% if !@advert.contact.blank? %>
			<p class="bold">Contact: <%= @advert.contact%></p>
			<% end%>      
			<% if !@advert.applicationDeadline.blank? %>
			<p class="bold">Apply before: <%= @advert.applicationDeadline%></p>
			<% end%>      
			<% if !@advert.applicationDeadline.blank? %>
		        <p class="bold">Apply before: <%= @advert.applicationDeadline%></p>
		      <% end%>      
		      <% if !@advert.applicationLink.blank? %>
		        <% if !@current_user.nil? %>
		        <p class="bold">Apply here: <%=link_to @advert.applicationLink%></p>
		        <% else %>
		        <h3>Sign in to view application link</h3>
		        <% end %>
		      <% end%>    

			<p class="italics"> Created at: <%=@advert.created_at%></p>
			<p class="italics"> Updated at: <%=@advert.updated_at%></p>
		</section>
	</aside>
</div>
	<% if can? :update, @advert %>
	<p><%= link_to "Edit", edit_advert_path %></p>
	<% end %>
	<% if can? :destroy, @advert %>
	<p><%= link_to "Delete", @advert, confirm: 'Are you sure?', method: :delete %></p>		

	<% end %>
