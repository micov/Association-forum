<%= provide(:title, 'All associations') %>
<h1>All associations</h1>
<%= will_paginate %>
  <table class ="table table-condensed table-striped">
<% @associations.each do |association| %>
      <tr><td><%= link_to association.name, association %></td>
	<% if can? :destroy, @association %>
	<td><%= link_to "Delete", association, confirm: 'Are you sure?', method: :delete %></td></tr>
	<% end %>
  <% end %>
</table>

<% if can? :create , Association %>
<p><%= link_to "Create new association", new_association_path %></p>
<% end %>
	

<%= will_paginate %>